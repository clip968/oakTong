<!-- 메인 컨테이너 -->
<main class="main-container">
    <div class="content-wrapper">
        <div class="page-header">
            <h2 class="page-title">
                <i class="fas fa-sign-in-alt"></i> 로그인
            </h2>
            <p class="page-subtitle">계정에 로그인하여 위스키 추천을 받아보세요</p>
        </div>

        <div class="content-card">
            <!-- 에러 메시지 표시 -->
            <% if (locals.error) { %>
                <div class="error-message">
                    <i class="fas fa-exclamation-triangle"></i>
                    <%= error %>
                </div>
            <% } %>
            
            <form action="/login" method="POST" id="login-form" class="auth-form">
                <div class="form-group">
                    <label for="login-user-id">
                        <i class="fas fa-id-card"></i>
                        사용자 ID
                    </label>
                    <input type="text" id="login-user-id" name="user_id" class="form-input" placeholder="사용자 ID를 입력하세요" value="<%= locals.formData ? formData.user_id || '' : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="login-password">
                        <i class="fas fa-lock"></i>
                        비밀번호
                    </label>
                    <input type="password" id="login-password" name="password" class="form-input" placeholder="비밀번호를 입력하세요" required>
                </div>
                <!--
                <div class="form-options">
                    <label class="checkbox-label">
                        <input type="checkbox" id="remember-me" name="remember">
                        <span class="checkmark"></span>
                        로그인 상태 유지
                    </label>
                    <a href="#" class="forgot-password">비밀번호를 잊으셨나요?</a>
                </div>
                -->
                <button type="submit" class="primary-btn full-width">
                    <i class="fas fa-sign-in-alt"></i>
                    로그인
                </button>
            </form>
            
            <div class="auth-footer">
                <p>아직 계정이 없으신가요? <a href="/register" class="link-btn">회원가입</a></p>
            </div>
        </div>
    </div>
</main>
